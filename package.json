{
	"name": "react-auth",
	"version": "1.0.0",
	"description": "react-auth",
	"license": "MIT",
	"main": "dist/index.js",
	"module": "dist/index.modern.js",
	"source": "src/index.tsx",
	"engines": {
		"node": ">=10"
	},
	"scripts": {
		"build": "microbundle-crl --no-compress --format modern,cjs",
		"start": "microbundle-crl watch --no-compress --format modern,cjs",
		"example": "cd example yarn build",
		"dev": "npm start && yarn example",
		"prepublish": "run-s build",
		"test": "run-s test:lint test:build",
		"test:build": "run-s build",
		"test:lint": "eslint --max-warnings 0 --ext .js,.jsx,.ts,.tsx src/",
		"test:watch": "react-scripts test --env=jest-environment-jsdom-sixteen",
		"predeploy": "cd example && yarn install && yarn build",
		"format": "prettier --write './**/*.{js,jsx,ts,tsx,css, md}'",
		"upgrade": "npx npm-check-updates &&  npx npm-check-updates -u"
	},
	"peerDependencies": {
		"react": ">=16.0.0"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^14.0.0",
		"@testing-library/user-event": "^14.4.3",
		"@types/jest": "^29.4.0",
		"@types/node": "^18.14.0",
		"@types/react": "^18.0.28",
		"@types/react-dom": "^18.0.11",
		"@typescript-eslint/eslint-plugin": "^5.53.0",
		"@typescript-eslint/parser": "^5.53.0",
		"babel-eslint": "^10.0.3",
		"cross-env": "^7.0.3",
		"eslint": "^8.34.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-config-standard": "^17.0.0",
		"eslint-config-standard-react": "^13.0.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-standard": "^4.1.0",
		"gh-pages": "^5.0.0",
		"jest-environment-jsdom-sixteen": "^1.0.3",
		"microbundle-crl": "^0.13.11",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.4",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-scripts": "^5.0.1",
		"typescript": "^4.9.5"
	},
	"dependencies": {
		"react-hook-form": "^7.43.1"
	},
	"files": [
		"dist"
	]
}